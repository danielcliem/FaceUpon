%div{:class => "display_groupons round"}
  = will_paginate
  %table{:class => "groupon_deal round", :summary => "Groupons"}
    - @groupon_deal.each do |deal|
      %tr{:class => "round"}
        %td{:class => "groupon_name round"}
          .display_merchant_title
            = link_to deal[:merchant_name], SITE_URL+"/groupon_deal/"+deal[:id].to_s
          %br
          .display_announcement
            = deal[:announcementTitle]
        %td{:class => "groupon_image round"}
          = link_to image_tag(deal[:sidebarImageUrl], :width => 95), SITE_URL+"/groupon_deal/"+deal[:id].to_s

  = will_paginate
